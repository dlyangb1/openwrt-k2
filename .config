# 目标平台与设备
CONFIG_TARGET_ramips=y
CONFIG_TARGET_ramips_mt7620=y
CONFIG_TARGET_ramips_mt7620_DEVICE_phicomm_psg1218a=y

# 基础系统裁剪
CONFIG_BUSYBOX_CUSTOM=y
CONFIG_DROPBEAR_CURVE25519=n
CONFIG_PACKAGE_luci=n
CONFIG_PACKAGE_luci-base=n
CONFIG_PACKAGE_luci-ssl=n
CONFIG_PACKAGE_luci-app-firewall=n
CONFIG_PACKAGE_luci-app-upnp=n
CONFIG_PACKAGE_luci-proto-ipv6=n

# 禁用 IPv6 支持
CONFIG_IPV6=n
CONFIG_PACKAGE_kmod-ipv6=n
CONFIG_PACKAGE_odhcp6c=n
CONFIG_PACKAGE_odhcpd-ipv6only=n
CONFIG_PACKAGE_ip6tables=n
CONFIG_PACKAGE_libtirpc=n
CONFIG_PACKAGE_rpcd-mod-rrdns=n

# 保留必要模块
CONFIG_PACKAGE_kmod-tun=y
CONFIG_PACKAGE_tinyproxy=y
CONFIG_PACKAGE_curl=y

# TurboACC 加速组件（仅保留核心）
CONFIG_PACKAGE_luci-app-turboacc=n
CONFIG_PACKAGE_TurboACC=y
CONFIG_PACKAGE_TurboACC_INCLUDE_BBR=y
CONFIG_PACKAGE_TurboACC_INCLUDE_SHORTCUT_FE=y
CONFIG_PACKAGE_TurboACC_INCLUDE_SHORTCUT_FQ=y
CONFIG_PACKAGE_TurboACC_INCLUDE_FASTCLASS=n

# 网络工具（精简）
CONFIG_PACKAGE_iptables-mod-tproxy=y
CONFIG_PACKAGE_ip-full=y
CONFIG_PACKAGE_iptables=y

# 系统工具（仅保留必要）
CONFIG_PACKAGE_coreutils-nohup=y
CONFIG_PACKAGE_procps-ng=y
CONFIG_PACKAGE_uci=y
CONFIG_PACKAGE_ubus=y
CONFIG_PACKAGE_ubox=y
CONFIG_PACKAGE_logd=y

# 压缩优化
CONFIG_TARGET_ROOTFS_PARTSIZE=7680
CONFIG_TARGET_IMAGES_GZIP=y
CONFIG_TARGET_ROOTFS_SQUASHFS=y
