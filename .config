CONFIG_TARGET_ramips=y
CONFIG_TARGET_ramips_mt7620=y
CONFIG_TARGET_ramips_mt7620_DEVICE_phicomm_psg1218a=y

# 保留核心功能包
CONFIG_PACKAGE_kmod-tun=y
CONFIG_PACKAGE_turboacc=y
CONFIG_PACKAGE_TURBOACC_INCLUDE_BBR_CCA=y
CONFIG_PACKAGE_TURBOACC_INCLUDE_FLOW_OFFLOAD=y
CONFIG_PACKAGE_TURBOACC_INCLUDE_SHORTCUT_FE=y
CONFIG_PACKAGE_tinyproxy=y
CONFIG_PACKAGE_curl=y

# 移除 LuCI 及相关依赖
# CONFIG_PACKAGE_luci is not set
# CONFIG_PACKAGE_luci-lib-fs is not set
# CONFIG_PACKAGE_luci-app-turboacc is not set
# CONFIG_PACKAGE_luci-app-tinyproxy is not set

CONFIG_IPV6=n
CONFIG_PACKAGE_ip6tables=n
CONFIG_PACKAGE_odhcp6c=n
CONFIG_PACKAGE_libustream-openssl=n
CONFIG_PACKAGE_libopenssl=n
CONFIG_PACKAGE_libmbedtls=n

# 精简内核功能
CONFIG_KERNEL_PRINTK=n
CONFIG_KERNEL_DEBUG_FS=n
CONFIG_KERNEL_KALLSYMS=n

# 禁用 IPv6（如不需要）
CONFIG_IPV6=n
CONFIG_PACKAGE_ipv6helper=n

# 禁用 HTTPS 支持（节省 OpenSSL 体积）
# CONFIG_PACKAGE_libopenssl is not set
# CONFIG_PACKAGE_luci-ssl-openssl is not set
